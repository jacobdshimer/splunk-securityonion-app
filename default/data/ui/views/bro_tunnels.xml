<form>
  <label>Bro Tunnels</label>
  <fieldset submitButton="false" autoRun="true">
    <input type="time" token="timepicker" searchWhenChanged="true">
      <label>Select Time</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="radio" token="auto_refresh" searchWhenChanged="true">
      <label>Auto Refresh</label>
      <choice value="5s">5 Seconds</choice>
      <choice value="30s">30 Seconds</choice>
      <choice value="1m">1 Minute</choice>
      <choice value="2m">2 Minutes</choice>
      <choice value="5m">5 minutes</choice>
    </input>
    <input type="dropdown" token="sourceip_tok" searchWhenChanged="true">
      <label>Source IP:</label>
      <default>*</default>
      <choice value="*">All</choice>
      <search>
        <query>sourcetype=bro_tunnel src_port=$sourceport_tok$ dest=$destinationip_tok$ dest_port=$destinationport_tok$ | stats count by src</query>
        <earliest>$timepicker.earliest$</earliest>
        <latest>$timepicker.latest$</latest>
      </search>
      <fieldForLabel>src</fieldForLabel>
      <fieldForValue>src</fieldForValue>
    </input>
    <input type="dropdown" token="sourceport_tok" searchWhenChanged="true">
      <label>Source Port:</label>
      <choice value="*">All</choice>
      <default>*</default>
      <fieldForLabel>src_port</fieldForLabel>
      <fieldForValue>src_port</fieldForValue>
      <search>
        <query>sourcetype=bro_tunnel src=$sourceip_tok$ dest=$destinationip_tok$ dest_port=$destinationport_tok$ | stats count by src_port</query>
        <earliest>$timepicker.earliest$</earliest>
        <latest>$timepicker.latest$</latest>
      </search>
    </input>
    <input type="dropdown" token="destinationip_tok" searchWhenChanged="true">
      <label>Destination IP:</label>
      <choice value="*">All</choice>
      <default>*</default>
      <fieldForLabel>dest</fieldForLabel>
      <fieldForValue>dest</fieldForValue>
      <search>
        <query>sourcetype=bro_tunnel src=$sourceip_tok$ src_port=$sourceport_tok$ dest_port=$destinationport_tok$ | stats count by dest</query>
        <earliest>$timepicker.earliest$</earliest>
        <latest>$timepicker.latest$</latest>
      </search>
    </input>
    <input type="dropdown" token="destinationport_tok" searchWhenChanged="true">
      <label>Destination Port:</label>
      <choice value="*">All</choice>
      <default>*</default>
      <fieldForLabel>dest_port</fieldForLabel>
      <fieldForValue>dest_port</fieldForValue>
      <search>
        <query>sourcetype=bro_tunnel src=$sourceip_tok$ src_port=$sourceport_tok$ dest=$destinationip_tok$ | stats count by dest_port</query>
        <earliest>$timepicker.earliest$</earliest>
        <latest>$timepicker.latest$</latest>
      </search>
    </input>
  </fieldset>
  <row>
    <panel>
      <html>
        <h1>Input selections: SIP:$sourceip_tok$, SPRT:$sourceport_tok$, DIP:$destinationip_tok$, DPRT:$destinationport_tok$</h1>
        <h2>To edit, ctrl+f twice to pull up find and replace and replace bro_tunnel with the source type, bro_tunnel DASHBOARD with the dashboard name, and Tunnels with the log type.</h2>
      </html>
    </panel>
  </row>
  <row>
    <panel>
      <title>Tunnels - Log Count</title>
      <single>
        <search>
          <query>sourcetype="bro_tunnel" src=$sourceip_tok$ src_port=$sourceport_tok$ dest=$destinationip_tok$ dest_port=$destinationport_tok$
| stats count(_raw)</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="height">247</option>
        <option name="rangeColors">["0x53a051","0x0877a6","0xf8be34","0xf1813f","0xdc4e41"]</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
    <panel>
      <title>Tunnels - Log Count Over Time</title>
      <chart>
        <search>
          <query>sourcetype="bro_tunnel" src=$sourceip_tok$ src_port=$sourceport_tok$ dest=$destinationip_tok$ dest_port=$destinationport_tok$
| timechart count(_raw)</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="charting.axisTitleY.text">Logs</option>
        <option name="charting.chart">line</option>
        <option name="charting.chart.showDataLabels">none</option>
        <option name="charting.drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Tunnels - Logs</title>
      <table>
        <search>
          <query>sourcetype=bro_tunnel
| join src,src_port,dest,dest_port
    [search sourcetype=bro_conn  duration=*
| join src,src_port,dest,dest_port
    [search sourcetype=sguild]]
| table _time, startTime, endTime, src,src_port,dest,dest_port, uid
| sort -_time</query>
          <earliest>$timepicker.earliest$</earliest>
          <latest>$timepicker.latest$</latest>
        </search>
        <option name="count">10</option>
        <option name="drilldown">none</option>
      </table>
    </panel>
  </row>
</form>